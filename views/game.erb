<link rel="stylesheet" href="/sinatra.css">

<h1>Play Chess!</h1>
  <table>
    <tr>
      <td></td>
      <% ("A".."H").each do |file| %>
        <th><%= "#{file}" %></th>
      <% end %>
    </tr>
    <% 8.downto(1) do |rank| %>
      <tr><th><%= "#{rank}" %></th>
      <% ("A".."H").each do |file| %>
        <% square = "#{file}#{rank}" %>
        <td><%= "#{@board[square]}" %></td>
      <% end %>
      <th><%= "#{rank}" %></th>
      </tr>
    <% end %>
    <tr>
      <td></td>
      <% ("A".."H").each do |file| %>
        <th><%= "#{file}" %></th>
      <% end %>
    </tr>
  </table>
